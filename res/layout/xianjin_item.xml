<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
    <TextView
        	android:id="@+id/tv_brokerageAccount" 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12sp"
            android:text="13918406140"/>
        <TextView
            android:id="@+id/tv_investMoney" 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.2"
             android:textSize="12sp"
            android:gravity="center"
            android:text="4000.00"/>
        <TextView
            android:id="@+id/tv_investData" 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
             android:textSize="12sp"
            android:gravity="center"
            android:text="2015.05.12"/>
        <TextView
            android:id="@+id/tv_brokerage" 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2.2"
             android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/zhusediao"
            android:text="1000.00"/>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0.1dp"
    android:background="@drawable/line"
    android:orientation="horizontal"
     android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"></LinearLayout>
</LinearLayout>
