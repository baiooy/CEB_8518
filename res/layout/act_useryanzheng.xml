<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eee" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="55.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:onClick="onback"
             android:background="@drawable/btn_bg_style"
            android:src="@drawable/back_92xx"/>
       
       <Button 
           android:id="@+id/btn_register" 
           android:layout_width="55dp"
           android:layout_height="fill_parent"
           android:layout_centerVertical="true"
           android:background="@drawable/btn_bg_style"
           android:text="注册"
           android:visibility="gone"
           android:textColor="#666"
           android:textSize="16sp"
           android:layout_alignParentRight="true"/>

       <TextView
           android:id="@+id/tv_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:text="手机号/账号"
           android:textColor="#444"
           android:textSize="17sp" />
     
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#999"></LinearLayout>
    
    <RelativeLayout
                android:id="@+id/rl_xingbie"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical" >
 			<ImageView
                android:id="@+id/dianhua"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/dianhua" />

                 <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入手机号/账号（6-20位）"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/dianhua"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#999"></LinearLayout>
           
            
            <Button 
         android:id="@+id/btn_yanzheng" 
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:text="下一步"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:background="@drawable/inputdata"
         android:textColor="#fff"
         android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tv_forget" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textColor="@drawable/install_device"
                android:layout_marginLeft="10dp"
                android:text="忘记密码?"/>

</LinearLayout>
