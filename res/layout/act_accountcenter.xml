<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/add_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#eee" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="55.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg_style"
            android:onClick="onback"
            android:src="@drawable/back_92xx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账户中心"
            android:textColor="#444"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#999" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/zhusediao"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.view.RoundImageView 
            android:id="@+id/riv_account"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/wodezhanghu2"
            android:padding="3dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="2.5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_loggingname"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:paddingTop="5dp"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_openhuifu"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/list_bg_style"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="托管账户"
            android:textColor="#444"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/mm_submenu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:scaleType="matrix"
            android:src="@drawable/jiantou1b" />

        <TextView
            android:id="@+id/tv_openhuifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mm_submenu4"
            android:textColor="#ff6666"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/list_bg_style"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="实名认证"
            android:textColor="#444"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/mm_submenu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:scaleType="matrix"
            android:src="@drawable/jiantou1b" />

        <TextView
            android:id="@+id/tv_renzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mm_submenu4"
            android:textColor="#ff6666"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bank"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/list_bg_style"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="我的银行卡"
            android:textColor="#444"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/mm_submenu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:scaleType="matrix"
            android:src="@drawable/jiantou1b" />

        <TextView
            android:id="@+id/tv_bangka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mm_submenu4"
            android:textColor="#ff6666"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/list_bg_style"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_xiaoxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="我的消息"
            android:textColor="#444"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/mm_submenu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:scaleType="matrix"
            android:src="@drawable/jiantou1b" />

        <ImageView 
            android:id="@+id/iv_redround"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_xiaoxi"
            android:src="@drawable/redround" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_alterpasswd"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/list_bg_style"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="修改登录密码"
            android:textColor="#444"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/mm_submenu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:scaleType="matrix"
            android:src="@drawable/jiantou1b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/mm_submenu4"
            android:textColor="#ff6666"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="手势密码"
            android:textColor="#444"
            android:textSize="15sp" />

        <com.ceb.widge.UISwitchButton
            xmlns:switch="http://schemas.android.com/apk/res-auto"
            android:id="@+id/switch_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_marginRight="22dp"
            android:checked="true"
            switch:bmHeight="50000dp"
            switch:bmWidth="40dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ff6666"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/list_bg_style"
            android:text="退出当前账户"
            android:textColor="@color/zhusediao"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>