<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/etv"
    android:background="#F5F5F5"
    android:orientation="vertical" >

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
 <!-- 左边主体 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip" >

                <TextView
                    android:id="@+id/group_tiao"
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@color/gray" />

                <com.view.RoundImageView
                    android:id="@+id/ri_avatar"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/redround"/>
                
                <ImageButton
            android:id="@+id/ib_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.3dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/bao" />
                
            </FrameLayout>

            <!--
                 <TextView
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:layout_marginLeft="50dip"
                android:background="#ff6666" />
            -->
        </RelativeLayout>

        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rl_hot"
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingBottom="6dp"
            android:orientation="vertical" >

            <TextView 
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/iv_image"
                android:textColor="#555"
                android:textSize="14sp" />

           <ImageView
               android:id="@+id/iv_image" 
               android:layout_below="@+id/ll_date"
               android:layout_width="fill_parent"
               android:layout_height="120dp"/>
            
            <RelativeLayout
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:background="#F5F5F5"
                android:paddingTop="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >
                
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222"
                    android:paddingBottom="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="4dp"
                    android:visibility="invisible"
                    android:textSize="13sp" />
                
               
            </RelativeLayout>

         
          
	
   
    </RelativeLayout>

    <!-- END of 左边主体 -->
    </LinearLayout>
    
    <!-- <RelativeLayout
        android:id="@id/expand_footer"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="0dp" >

        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:clickable="false" />
    </RelativeLayout> -->

</LinearLayout>