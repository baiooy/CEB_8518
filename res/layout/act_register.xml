<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="55.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:onClick="onback"
             android:background="@drawable/btn_bg_style"
            android:src="@drawable/back_92xx"/>
      

       <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"         
            android:textColor="#444"
            android:textSize="17sp" />
       
       <Button 
           android:id="@+id/btn_loginn" 
           android:layout_width="55dp"
           android:layout_height="fill_parent"
           android:layout_centerVertical="true"
           android:background="@drawable/btn_bg_style"
           android:text="登录"
           android:textColor="#666"
           android:textSize="16sp"
           android:visibility="gone"
           android:layout_alignParentRight="true"/>
     
    </RelativeLayout>
    
    
    <RelativeLayout
                android:id="@+id/rl_xingbie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:gravity="center_vertical" >
 			<ImageView
                android:id="@+id/three"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/dianhua" />

                <TextView
                    android:layout_toRightOf="@id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="手机号"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/mm_submenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                     android:visibility="invisible"
                    android:src="@drawable/jiantou1b" />
                 <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号码"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/mm_submenu2"
                    android:layout_centerVertical="true"
                    android:textColor="#808080"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textSize="15sp" />
            </RelativeLayout>
            <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#999"></LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical" >
 			<ImageView
                android:id="@+id/mima"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/mima" />

               
                 <EditText
                    android:id="@+id/et_passwd"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请设置6-20位密码"
                    android:layout_toRightOf="@id/mima"
                    android:layout_toLeftOf="@+id/tv_show"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:maxLength="20"
                    android:inputType="textPassword"
        			android:singleLine="true"
                    android:textSize="15sp" />
                 <TextView
                    android:id="@+id/tv_show"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="显示"
                    android:layout_marginRight="10dp"
                    android:textColor="@drawable/install_device"/>
                 
            </RelativeLayout>
            <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#eee"></LinearLayout>
            
            <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:visibility="gone"
        android:background="#eee">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:text="6-20位密码，包含数字或密码或特殊符号"
                    android:textColor="#999"/>
            </LinearLayout> 
          
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical" >
 			<ImageView
                android:id="@+id/yanzhengma"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/yanzhengma" />

                <TextView
                    android:id="@+id/tv_getyzm"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:gravity="center"
                    android:textColor="@drawable/install_device"
                    android:layout_marginRight="8dp"
                    android:text="获取验证码" />
                 <EditText
                    android:id="@+id/et_yanzhengma"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入验证码"
                    android:layout_toRightOf="@id/yanzhengma"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:layout_toLeftOf="@id/tv_getyzm"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:inputType="number"
        			android:singleLine="true"
                    android:textSize="15sp" />
            </RelativeLayout>
            
             <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:layout_marginTop="0.1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical" >

 			<ImageView
 			    android:id="@+id/yaoqingma"
 			    android:layout_width="24dp"
 			    android:layout_height="24dp"
 			     android:layout_centerVertical="true"
 			    android:layout_marginLeft="12dp"
 			    android:src="@drawable/yaoqingma" />

                
                 <EditText
                    android:id="@+id/et_yaoqingma"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="邀请码（选填）"
                    android:layout_toRightOf="@id/yaoqingma"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:inputType="number"
        			android:singleLine="true"
                    android:textSize="15sp" />
            </RelativeLayout> 
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:gravity="center_vertical" >
 			<ImageView 
                android:id="@+id/gouhao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/xuankuangs1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:layout_marginLeft="8dp"
                    android:textColor="#666"
                    android:textSize="12sp" />
                 <TextView
                    android:id="@+id/tv_fengxian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《风险提示》"
                    android:layout_marginLeft="2dp"
                    android:textColor="#666"
                    android:textSize="12sp" />
                  <TextView
                    android:id="@+id/tv_yonghu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《用户协议》"
                    android:layout_marginLeft="2dp"
                    android:textColor="#666"
                    android:textSize="12sp" />
                   <TextView
                    android:id="@+id/tv_hege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《合格投资人协议》"
                    android:layout_marginLeft="2dp"
                    android:textColor="#666"
                    android:textSize="12sp" />
					
               
            </LinearLayout>
             
        <Button
         android:id="@+id/btn_register" 
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:text="注册"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:background="@drawable/inputdata"
         android:textColor="#fff"
         android:layout_marginTop="10dp"/>
           

</LinearLayout>
