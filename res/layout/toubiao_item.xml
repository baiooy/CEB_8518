<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:paddingTop="10dp"
    android:background="#fff"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/ll_title" 
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingLeft="15dp">
         <TextView
            android:id="@+id/tv_title" 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="CEB-0006期"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#000"/>
         
        <TextView
            android:id="@+id/tv_subtitle" 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv_title"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:text="（一次性还本付息）"
            android:textSize="13sp"
            android:textColor="#f00"/>
        
         <ImageView
            android:id="@+id/iv_jiang"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_toRightOf="@id/tv_subtitle"
            android:layout_marginLeft="4dp"
            android:src="@drawable/jianglibiao" />
        <Button
            android:id="@+id/btn_thaw"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="解冻资金"
            android:layout_marginRight="6dp"
            android:visibility="invisible"
            android:textColor="@drawable/pinglun_text"
            android:background="@drawable/pinglun"
            android:textSize="13sp"/>
    </RelativeLayout>
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_investmentAmount"  
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textSize="17sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_date" 
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="2015/01/12 \n 11:23"
            android:textSize="15sp"
            android:gravity="top|center_horizontal"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_amountRevenue" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="300"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#000"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="投资金额（元）"
            android:textSize="12sp"
            android:textColor="#444"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="投资时间"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#444"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="预期收益（元）"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#444"/>
    </LinearLayout>
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0.1dp"
    android:background="#ccc"/>
     <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <Button 
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="还款计划"
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/inputdata"
            android:textColor="#fff"/>
        <Button 
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="还款计划"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/chengsebian"
            android:layout_marginRight="15dp"
            android:textColor="#ff9933"/>
    </RelativeLayout>

</LinearLayout>
