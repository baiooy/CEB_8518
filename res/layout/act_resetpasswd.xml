<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eee" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="55.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:onClick="onback"
             android:background="@drawable/btn_bg_style"
            android:src="@drawable/back_92xx"/>
      

       <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置新密码"         
            android:textColor="#444"
            android:textSize="17sp" />
       
       <Button 
           android:id="@+id/btn_loginn" 
           android:layout_width="55dp"
           android:layout_height="fill_parent"
           android:layout_centerVertical="true"
           android:background="@drawable/btn_bg_style"
           android:text="登录"
           android:visibility="gone"
           android:textColor="#666"
           android:textSize="16sp"
           android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"></LinearLayout>
<RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:gravity="center_vertical" >
 			<ImageView
                android:id="@+id/three"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/mima" />

                <TextView
                    android:id="@+id/tv_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="显示"
                    android:textColor="@drawable/install_device"/>
                 <EditText
                    android:id="@+id/et_passwd"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="密码为6-20位，字母加数字组合"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:layout_toRightOf="@id/three"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_show"
                    android:textColor="#808080"
                    android:inputType="textPassword"
        			android:singleLine="true"
                    android:textSize="15sp" />
            </RelativeLayout>
            <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"></LinearLayout>
            
            <Button
         android:id="@+id/btn_ok" 
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:text="完成"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:background="@drawable/inputdata"
         android:textColor="#fff"
         android:layout_marginTop="20dp"/>
</LinearLayout>
