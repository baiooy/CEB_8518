<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eee" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="55.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:onClick="onback"
             android:background="@drawable/btn_bg_style"
            android:src="@drawable/back_92xx"/>
      

       <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回登录密码"         
            android:textColor="#444"
            android:textSize="17sp" />
       
       <Button 
           android:id="@+id/btn_loginn" 
           android:layout_width="55dp"
           android:layout_height="fill_parent"
           android:layout_centerVertical="true"
           android:background="@drawable/btn_bg_style"
           android:text="登录"
           android:visibility="gone"
           android:textColor="#666"
           android:textSize="16sp"
           android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#999"></LinearLayout>
    <RelativeLayout
                android:id="@+id/rl_xingbie"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical" >
 			<ImageView
                android:id="@+id/three"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/dianhua" />

                
                 <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入手机号码"
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/three"
                    android:layout_centerVertical="true"
                    android:textColor="#808080"
                    android:maxLength="11"
                    android:cursorVisible="false"
                    android:inputType="phone"
                    android:textSize="15sp" />
            </RelativeLayout>
             <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#999"></LinearLayout>
    <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:gravity="center_vertical" >
 			<ImageView
                android:id="@+id/two"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/yanzhengma" />

                <TextView
                    android:id="@+id/tv_getyzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:textColor="@drawable/install_device"
                    android:layout_marginRight="20dp"
                    android:text="获取验证码" />
                 <EditText
                    android:id="@+id/et_yanzhengma"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入验证码"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@id/tv_getyzm"
                    android:background="@null"
                    android:layout_toRightOf="@id/two"
                    android:layout_centerVertical="true"
                    android:textColor="#808080"
                    android:inputType="number"
        			android:singleLine="true"
                    android:textSize="15sp" />
            </RelativeLayout>
            <Button
         android:id="@+id/btn_next" 
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:text="下一步"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:background="@drawable/inputdata"
         android:textColor="#fff"
         android:layout_marginTop="20dp"/>

</LinearLayout>
