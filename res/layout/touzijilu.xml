<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_yiyou" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有"
            android:textSize="16sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/tv_numInvestors" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#f00"/>
        <TextView
            android:id="@+id/tv_jilu" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条投资记录"
            android:textSize="16sp"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平均每位累计投资"
            android:textSize="16sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/tv_aveAmount" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="331,270"
            android:textSize="16sp"
            android:textColor="#f00"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="16sp"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最多一位累计投资"
            android:textSize="16sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/tv_lastAmount" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="390,231"
            android:textSize="16sp"
            android:textColor="#f00"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="#666" >
    </LinearLayout>
 <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="#eee"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="会员"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#000"/>
        <TextView 
             android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="累计投资金额"
            android:gravity="center"
            android:textSize="14sp"/>
        <TextView 
             android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="最后投资日期"
            android:gravity="center"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:orientation="horizontal"
        android:background="#666" >
    </LinearLayout>
    <ListView
        android:id="@+id/lv_touzijilu" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#eee"
        android:dividerHeight="0.1dp"
        android:layout_marginBottom="3dp"/>
</LinearLayout>
