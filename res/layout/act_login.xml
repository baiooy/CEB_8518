<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eee" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="55.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:onClick="onback"
             android:background="@drawable/btn_bg_style"
            android:src="@drawable/back_92xx"/>

       <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"         
            android:textColor="#444"
            android:textSize="17sp" />
       
    <TextView
                android:id="@+id/tv_forget" 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:textColor="@color/zhusediao"
                android:layout_alignParentRight="true"
                android:text="忘记密码"/>
     
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#999"></LinearLayout>
    
    <RelativeLayout
                android:id="@+id/rl_xingbie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:gravity="center_vertical" >
 			<ImageView
                android:id="@+id/three"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/dianhua" />

                <TextView
                    android:layout_toRightOf="@id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="手机号"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/mm_submenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                     android:visibility="invisible"
                    android:src="@drawable/jiantou1b" />
                 <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号码"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/mm_submenu2"
                    android:layout_centerVertical="true"
                    android:textColor="#808080"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textSize="15sp" />
            </RelativeLayout>
            <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="#eee"></LinearLayout>
            <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:visibility="gone"
        android:background="#999"></LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:gravity="center_vertical" >
 			<ImageView
                android:id="@+id/mima"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/mima" />

                 <EditText
                    android:id="@+id/et_passwd"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入登录密码"
                    android:paddingLeft="15dp"
                    android:background="@null"
                    android:layout_toLeftOf="@+id/tv_show"
                    android:layout_toRightOf="@id/mima"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:maxLength="20"
                    android:inputType="textPassword"
        			android:singleLine="true"
                    android:textSize="15sp" />
                 
                 <TextView
                    android:id="@+id/tv_show"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="显示"
                    android:textColor="@drawable/install_device"/>
            </RelativeLayout>
            <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#999"></LinearLayout>
            
            <Button
         android:id="@+id/btn_login" 
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:text="登录"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:background="@drawable/inputdata"
         android:textColor="#fff"
         android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tv_forget" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@drawable/install_device"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:text="忘记密码?"/>

</LinearLayout>
